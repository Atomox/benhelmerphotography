				},
				"color_nav_hover": {
					"label": "Nav hover",
					"type": "color",
					"control_first": true
				},
				"color_nav_current": {
					"label": "Nav current",
					"type": "color",
					"control_first": true
				},
				"color_essay_caption": {
					"label": "Essay caption bg",
					"type": "color",
					"control_first": true
				},
				"color_essay_caption_text": {
					"label": "Essay caption text",
					"type": "color",
					"control_first": true
				}
			}
		},
		"Layout": {
			"icon": "layout",
			"settings": {
				"index_show_title": {
					"label": "Show slideshow title",
					"type": "boolean",
					"value": true,
					"scope": [ "index" ],
					"control_first": "true"
				},
				"albums_index_limit": {
					"label": "Show count",
					"type": "slider",
					"min": 8,
					"max": 48,
					"step": 4,
					"value": 12,
					"scope": [ "albums" ]
				},
				"albums_detail_limit": {
					"label": "Items per page",
					"type": "slider",
					"min": 10,
					"max": 50,
					"step": 1,
					"value": 21,
					"scope": [ "album" ]
				},
				"content_index_limit": {
					"label": "Items per page",
					"type": "slider",
					"min": 8,
					"max": 48,
					"step": 4,
					"value": 21,
					"scope": [ "contents", "favorites" ]
				}
			}
		},
		"Text display": {
			"icon": "type",
			"settings": {
				"albums_index_show_title": {
					"label": "Show title",
					"type": "boolean",
					"value": true,
					"scope": [ "albums" ]
				},
				"albums_index_title_align": {
					"label": "Title align",
					"type": "select",
					"options": [
						{"value": "left", "label":"Left"},
						{"value": "center", "label":"Center"},
						{"value": "right", "label":"Right"}
					],
					"value": "left",
					"dependencies": {
						"evaluate": "all",
						"conditions": [
							{
								"option": "albums_index_show_title",
								"equals": true
							}
						]
					},
					"scope": [ "albums" ]
				},
				"albums_index_show_caption": {
					"label": "Show caption",
					"type": "select",
					"options": [
						{"value": "None", "label":"None"},
						{"value": "Summary", "label":"Summary"},
						{"value": "Description", "label":"Description"}
					],
					"value": "Summary",
					"scope": [ "albums" ]
				},
				"albums_index_caption_align": {
					"label": "Caption align",
					"type": "select",
					"options": [
						{"value": "left", "label":"Left"},
						{"value": "center", "label":"Center"},
						{"value": "right", "label":"Right"},
						{"value": "justify", "label":"Justify"}
					],
					"value": "left",
					"scope": [ "albums" ],
					"dependencies": {
						"evaluate": "all",
						"conditions": [
							{
								"option": "albums_index_show_caption",
								"not": "None"
							}
						]
					}
				},
				"albums_index_truncate": {
					"label": "Truncate caption",
					"type": "boolean",
					"value": true,
					"dependencies": {
						"evaluate": "all",
						"conditions": [
							{
								"option": "albums_index_show_caption",
								"not": "None"
							}
						]
					},
					"scope": [ "albums" ]
				},
				"show_album_desc": {
					"label": "Show description",
					"type": "boolean",
					"value": "true",
					"scope": [ "album" ]
				},
				"albums_detail_show_date": {
					"label": "Show date",
					"type": "boolean",
					"value": false,
					"scope": [ "album" ]
				},
				"albums_detail_show_title": {
					"label": "Show title",
					"type": "boolean",
					"value": true,
					"scope": [ "album" ]
				},
				"albums_detail_title_align": {
					"label": "Title align",
					"type": "select",
					"options": [
						{"value": "left", "label":"Left"},
						{"value": "center", "label":"Center"},
						{"value": "right", "label":"Right"}
					],
					"value": "left",
					"dependencies": {
						"evaluate": "any",
						"conditions": [
							{
								"option": "albums_detail_show_title",
								"equals": true
							},
							{
								"option": "albums_detail_show_date",
								"equals": true
							}
						]
					},
					"scope": [ "album" ]
				},
				"albums_detail_show_caption": {
					"label": "Show caption",
					"type": "boolean",
					"value": true,
					"scope": [ "album" ]
				},
				"albums_detail_truncate": {
					"label": "Truncate caption",
					"type": "boolean",
					"value": true,
					"dependencies": {
						"evaluate": "all",
						"conditions": [
							{
								"option": "albums_detail_show_caption",
								"equals": true
							}
						]
					},
					"scope": [ "album" ]
				},
				"albums_detail_caption_align": {
					"label": "Caption align",
					"type": "select",
					"options": [
						{"value": "left", "label":"Left"},
						{"value": "center", "label":"Center"},
						{"value": "right", "label":"Right"},
						{"value": "justify", "label":"Justify"}
					],
					"value": "left",
					"dependencies": {
						"evaluate": "all",
						"conditions": [
							{
								"option": "albums_detail_show_caption",
								"equals": true
							}
						]
					},
					"scope": [ "album" ]
				},
				"content_index_show_date": {
					"label": "Show date",
					"type": "boolean",
					"value": false,
					"scope": [ "contents", "favorites" ]
				},
				"content_index_show_title": {
					"label": "Show title",
					"type": "boolean",
					"value": true,
					"scope": [ "contents", "favorites" ]
				},
				"content_index_show_caption": {
					"label": "Show caption",
					"type": "boolean",
					"value": true,
					"scope": [ "contents", "favorites" ]
				},
				"content_index_truncate": {
					"label": "Truncate caption",
					"type": "boolean",
					"value": true,
					"dependencies": {
						"evaluate": "all",
						"conditions": [
							{
								"option": "content_index_show_caption",
								"equals": true
							}
						]
					},
					"scope": [ "contents", "favorites" ]
