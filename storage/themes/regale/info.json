{
	"name": "Regale",
	"version": "1.1.6",
	"description": "Regale is a bold, assured theme that fluidly scales content across the entire browser window for larger than life photos. Includes a basic header and footer navigation, social media links, plus a configurable grid layout that allows you to control spacing and column count. Single photos presented on the content page are scaled as large as they can go for maximum impact. Theme preview photos by Daniele Zedda.",
	"demo": "http://koken.me",
	"author": {
		"name": "Koken",
		"link": "http://koken.me"
	},
	"koken_version_required": "0.5.0",

	"routes": {
		"/": {
			"template": "contents",
			"source": "contents"
		},
		"/sets/:id": {
			"template": "albums",
			"source": "set"
		}
	},

	"settings": {
		"Spacing": {
			"icon": "layout",
			"settings": {
				"header_pad_top": {
					"label": "Header pad top",
					"type": "slider",
					"min": 10,
					"max": 100,
					"step": 5,
					"value":15,
					"suffix":"px"
				},
				"header_pad_bot": {
					"label": "Header pad bot",
					"type": "slider",
					"min": 10,
					"max": 100,
					"step": 5,
					"value":15,
					"suffix":"px"
				},
				"footer_pad_top": {
					"label": "Footer pad top",
					"type": "slider",
					"min": 10,
					"max": 100,
					"step": 5,
					"value":15,
					"suffix":"px"
				},
				"footer_pad_bot": {
					"label": "Footer pad bot",
					"type": "slider",
					"min": 10,
					"max": 100,
					"step": 5,
					"value":15,
					"suffix":"px"
				},
				"inset_pad": {
					"label": "Inside pad",
					"type": "slider",
					"min": 0,
					"max": 100,
					"value": 20,
					"step": 10,
					"suffix": "px"
				},
				"inset_spacing": {
					"label": "Inside spacing",
					"type": "slider",
					"min": 0,
					"max": 50,
					"value": 15,
					"step": 1,
					"suffix": "px"
				}
			}
		},
		"Site title": {
			"icon":"type",
			"settings": {
				"site_title_type": {
					"label": "Type",
					"type": "select",
					"options": [
						{ "label": "Text", "value": "text" },
						{ "label": "Image", "value": "image" }
					],
					"value": "text"
				},
				"site_title_weight": {
					"label": "Weight",
					"type": "select",
					"options": [
						{ "label":"400", "value":"400" },
						{ "label":"600", "value":"600" }
					],
					"value":"400",
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "text"
	                         }
	                    ]
	               }
				},
				"site_title_img_url": {
					"label": "Image URL",
					"type": "string",
					"value": "",
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "image"
	                         }
	                    ]
	               }
				},
				"site_title_img_scale_mobile": {
					"label": "Mobile scale",
					"type": "slider",
					"min": 0.1,
					"max": 1,
					"step": 0.1,
					"value": 0.5,
					"dependencies": {
	                    "evaluate": "all",
	                    "conditions": [
	                         {
	                              "option": "site_title_type",
	                              "equals": "image"
	                         }
	                    ]
	               }
				}
			}
		},
		"Grid": {
			"icon": "layout",
			"settings": {
				"grid_col_num": {
					"label": "Max columns",
					"type": "slider",
					"min": 1,
					"max": 8,
					"value": 3,
					"step": 1,
					"scope": [ "album", "index", "contents", "favorites", "archive.contents.lens" ]
				},
				"grid_col_spacing": {
					"label": "Spacing",
					"type": "slider",
					"min": 0,
					"max": 80,
					"value": 40,
					"step": 5,
					"suffix": "px",
					"scope": [ "album", "index", "contents", "favorites", "archive.contents.lens" ]
				},
				"grid_col_offset": {
					"label": "Offset vertical",
					"type": "slider",
					"min": 0,
					"max": 80,
					"value": 0,
					"step": 5,
					"suffix": "px",
					"scope": [ "album", "index", "contents", "favorites", "archive.contents.lens" ]
				},
				"grid_albums_col_num": {
					"label": "Max columns",
					"type": "slider",
					"min": 1,
					"max": 8,
					"value": 3,
					"step": 1,
					"scope": [ "albums", "set" ]
				},
				"grid_albums_col_spacing": {
					"label": "Spacing",
					"type": "slider",
					"min": 0,
					"max": 80,
					"value": 40,
					"step": 5,
					"suffix": "px",
					"scope": [ "albums", "set" ]
				},
				"grid_albums_col_offset": {
					"label": "Offset vertical",
					"type": "slider",
					"min": 0,
					"max": 80,
					"value": 0,
					"step": 5,
					"suffix": "px",
					"scope": [ "albums", "set" ]
				},
				"thumb_ratio": {
		            "label": "Aspect ratio",
		            "type": "select",
		            "options": [
		              { "label": "1:1", "value": "1:1" },
		              { "label": "2:1", "value": "2:1" },
		              { "label": "3:2", "value": "3:2" },
		              { "label": "4:3", "value": "4:3" },
		              { "label": "16:9", "value": "16:9" }
		            ],
		            "value": "3:2",
		            "scope": [ "albums", "set" ]
		        },
		          "albums_show_title": {
		          	"label": "Show hover titles",
		          	"type": "boolean",
		          	"value": true,
		          	"scope": [ "albums", "set" ]
		          },
		          "albums_show_summary": {
		          	"label": "Show hover summary",
		          	"type": "boolean",
		          	"value": true,
		          	"scope": [ "albums", "set" ]
		          }
			}
		},
		"Elements": {
			"icon": "layout",
			"settings": {
				"content_show_title": {
					"label": "Show title",
					"type": "boolean",
					"value": true,
					"control_first": true,
					"scope": [ "content" ]
				},
				"content_show_caption": {
					"label": "Show caption",
					"type": "boolean",
					"value": true,
					"control_first": true,
					"scope": [ "content" ]
				},
				"content_show_exif": {
					"label": "Show EXIF",
					"type": "boolean",
					"value": true,
					"control_first": true,
					"scope": [ "content" ]
				},
				"content_show_date": {
					"label": "Show date captured",
					"type": "boolean",
					"value": true,
					"control_first": true,
					"scope": [ "content" ]
				},
				"content_show_dl": {
					"label": "Show download link",
					"type": "boolean",
					"value": true,
					"control_first": true,
					"scope": [ "content" ]
				},
				"content_show_meta": {
					"label": "Show tags and categories",
					"type": "boolean",
					"value": true,
					"control_first": true,
					"scope": [ "content" ]
				},
				"content_show_license": {
					"label": "Show license",
					"type": "boolean",
					"value": false,
					"control_first": true,
					"scope": [ "content" ]
				}
			}
		},
		"Typography": {
			"icon": "type",
			"settings": {
				"font_body": {
					"label": "Typeface",
					"type": "select",
					"options": [
						{ "label": "Istok", "value": "istok" },
						{ "label": "Karla", "value": "karla" },
						{ "label": "Helvetica", "value": "helvetica" }
					],
					"value": "karla"
				},
				"header_font_size": {
					"label": "Header font size",
					"type": "slider",
					"min": 12,
					"max": 28,
					"step": 1,
					"value": 16,
					"suffix": "px"
				},
				"footer_font_size": {
					"label": "Footer font size",
					"type": "slider",
					"min": 10,
					"max": 18,
					"step": 1,
					"value": 14,
					"suffix": "px"
				}
			}
		},
		"Social": {
			"icon":"social",
			"settings": {
				"show_social": {
					"label": "Show social media buttons",
					"type": "boolean",
					"value": true,
					"control_first": true
				}
			}
		},
		"Footer": {
			"icon": "layout",
			"settings": {
				"show_copyright": {
					"label": "Show copyright",
					"type": "boolean",
					"value": true,
					"control_first": true
				}
			}
		},
		"Color": {
			"icon": "color",
			"settings": {
				"body_color": {
					"label": "Body text color",
					"type": "color",
					"value": "#000",
					"control_first": true
				},
				"link_color": {
					"label": "Link text color",
					"type": "color",
					"value": "#000",
					"control_first": true
				},
				"link_color_hover": {
					"label": "Link text color hover",
					"type": "color",
					"value": "#000",
					"control_first": true
				},
				"bgcolor_body": {
					"label": "Body background",
					"type": "color",
					"value": "#fff",
					"control_first": true
				},
				"bgcolor_hf": {
					"label": "Header footer background",
					"type": "color",
					"value": "#fff",
					"control_first": true
				},
				"albums_hover_bg_color": {
					"label": "Hover title background",
					"type": "color",
					"value": "#fff",
					"control_first": true,
					"scope": [ "albums", "set" ]
				},
				"albums_hover_text_color": {
					"label": "Hover title text",
					"type": "color",
					"value": "#000",
					"control_first": true,
					"scope": [ "albums", "set" ]
				}
			}
		}
	},

	"navigation_groups": {
		"footer": {
			"label": "Footer",
			"description": "Links in the footer",
			"defaults": [
				{ "label":"Twitter", "url":"http://twitter.com" },
				{ "label":"Facebook", "url":"http://facebook.com" },
				{ "label":"Flickr", "url":"http://flickr.com" }
			]
		}
	}
}